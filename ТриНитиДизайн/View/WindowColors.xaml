<Window x:Class="ТриНитиДизайн.WindowColors"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ТриНитиДизайн"
        mc:Ignorable="d"
        Title="Установка точек смены цвета" Height="216.667" Width="550" ResizeMode="NoResize">
    <Grid>
        <Button x:Name="button_accept" Content="Создать" HorizontalAlignment="Left" Margin="170,138,0,0" VerticalAlignment="Top" Width="105" Click="button_accept_Click" Height="28"/>
        <Button x:Name="button_cancel" Content="Отменить" HorizontalAlignment="Left" Margin="420,138,0,0" VerticalAlignment="Top" Width="105" Click="button_cancel_Click" Height="28"/>
        <Button x:Name="button_delete" Content="Удалить" HorizontalAlignment="Left" Margin="296,138,0,0" VerticalAlignment="Top" Width="105"  Height="28" Click="button_delete_Click"/>
        <Rectangle x:Name="Rect_main" Fill="White" HorizontalAlignment="Left" Height="22" Margin="20,140,0,0" Stroke="Black" VerticalAlignment="Top" Width="124"/>
        <Canvas x:Name="canvasColors" HorizontalAlignment="Left" Height="176" VerticalAlignment="Top" Width="542" MouseLeftButtonDown="Canvas_MouseLeftButtonDown" MouseRightButtonDown="Canvas_MouseRightButtonDown" Margin="0,0,0,-1">
        </Canvas>
    </Grid>
</Window>
