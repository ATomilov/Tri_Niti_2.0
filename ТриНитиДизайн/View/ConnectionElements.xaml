<Window x:Class="ТриНитиДизайн.View.ConnectionElements"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ТриНитиДизайн.View"
        mc:Ignorable="d"
        Title="Соединить элементы" Height="191" Width="300" ResizeMode="NoResize">
    <Grid>
        <Button Content="Цепочкой" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="272" Click="Connection_Cepochka"/>
        <Button Content="Переносом" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top" Width="272" Click="Connection_Transfer"/>
        <Button Content="Сдвинуть точки" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" Width="272" Click="Connection_Shift_Points"/>
        <Button Content="Сдвинуть элементы" HorizontalAlignment="Left" Margin="10,100,0,0" VerticalAlignment="Top" Width="272" Click="Connection_Shift_Elements"/>
        <Button Content="Отменить" HorizontalAlignment="Left" Margin="65,130,0,0" Width="160" VerticalAlignment="Top" VerticalContentAlignment="Center"/>
    </Grid>
</Window>
