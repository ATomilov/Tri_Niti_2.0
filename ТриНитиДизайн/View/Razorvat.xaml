<Window x:Class="ТриНитиДизайн.View.Razorvat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ТриНитиДизайн.View"
        mc:Ignorable="d"
        Title="Разорвать?" Height="110" Width="175" ResizeMode="NoResize">
    <Grid>
        <Button x:Name="previous_button" Content="&lt;&lt;-" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="38" Height="25" Click="previous_button_Click"/>
        <Button x:Name="next_button" Content="-&gt;&gt;" HorizontalAlignment="Left" Margin="113,10,0,0" VerticalAlignment="Top" Width="38" Height="25" Click="next_button_Click"/>
        <Button Click="OpenWindowsColor" Content="Цвет" HorizontalAlignment="Left" Margin="53,10,0,0" VerticalAlignment="Top" Width="55" Height="25"/>
        <Button x:Name="yes_button" Content="Да" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top" Width="68" Height="25" Click="yes_button_Click"/>
        <Button x:Name="no_button" Content="Нет" HorizontalAlignment="Left" Margin="83,40,0,0" VerticalAlignment="Top" Width="68" Height="25" Click="no_button_Click"/>

    </Grid>
</Window>
